<Window x:Class="White_message.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:White_message"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="white&#xD;&#xA;message" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="65" Width="72" FontFamily="Comic Sans MS" FontSize="16"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,231,0,0" VerticalAlignment="Top" Width="55" FontSize="16"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="23" Margin="10,267,0,0" TextWrapping="Wrap" Text="User1" VerticalAlignment="Top" Width="55"/>
        <Button x:Name="Connect" Content="Connext" HorizontalAlignment="Left" Margin="7,306,0,0" VerticalAlignment="Top" Width="75" Background="White" Click="Connect_Click"/>
        <TextBox x:Name="Chat" HorizontalAlignment="Left" Height="243" Margin="116,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="603"/>
        <Button x:Name="Send" Content="Send" HorizontalAlignment="Left" Margin="116,344,0,0" VerticalAlignment="Top" Width="130" Height="45" Background="White" Click="Send_Click"/>
        <TextBox x:Name="Message" HorizontalAlignment="Left" Height="50" Margin="116,276,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="603"/>

    </Grid>
</Window>
