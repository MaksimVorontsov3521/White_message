<Window x:Class="White_message.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:White_message"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>

            <TabControl Grid.Row="1" Grid.Column="1" DockPanel.Dock="Top">
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5">
                        <Label Content="white&#xD;&#xA;message" HorizontalAlignment="Left"  Margin="10,19,0,0" VerticalAlignment="Top" Height="65" Width="72" FontFamily="Comic Sans MS" FontSize="16"/>
                        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,183,0,0" VerticalAlignment="Top" Width="55" FontSize="16"/>
                        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="23" Margin="10,219,0,0" TextWrapping="Wrap" Text="User1" VerticalAlignment="Top" Width="55" TextChanged="Name_TextChanged"/>
                        <Button x:Name="Connect" Content="Connect" HorizontalAlignment="Left" Margin="10,306,0,0" VerticalAlignment="Top" Width="75" Background="White" Click="Connect_Click"/>
                        <TextBox x:Name="Chat" HorizontalAlignment="Left" Height="243" Margin="116,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="491"/>
                        <Button x:Name="Send" Content="Send" HorizontalAlignment="Left" Margin="116,344,0,0" VerticalAlignment="Top" Width="130" Height="45" Background="White" Click="Send_Click"/>
                        <TextBox x:Name="Message" HorizontalAlignment="Left" Height="50" Margin="116,276,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="491" KeyDown="Message_KeyDown"/>
                        <Label Content="Online" DockPanel.Dock="Right" Margin="619,19,0,0" VerticalAlignment="Top" Width="100" HorizontalAlignment="Left"/>
                        <ListBox x:Name="OnLine" DockPanel.Dock="Right" HorizontalAlignment="Left" Height="217" Margin="618,45,0,0" VerticalAlignment="Top" Width="100"/>
                        <Button x:Name="disConnect" Content="Disconnect" HorizontalAlignment="Left" Margin="10,306,0,0" VerticalAlignment="Top" Width="75" Visibility="Hidden" Background="White" Click="disConnect_Click"/>
                        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,247,0,0" VerticalAlignment="Top" />
                        <TextBox x:Name="Password" HorizontalAlignment="Left" Height="23" Margin="10,273,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="Password_TextChanged"/>
                    </Grid>
                </TabItem>
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5">
                        <Button x:Name="ChangeViewShit" Content="ChangeView" HorizontalAlignment="Left" Height="89" Margin="21,26,0,0" VerticalAlignment="Top" Width="115" Click="ChangeViewShit_Click"/>
                        <Button x:Name="Registration" Content="Registration" HorizontalAlignment="Left" Height="89" Margin="173,26,0,0" VerticalAlignment="Top" Width="122" Click="Registration_Click"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
