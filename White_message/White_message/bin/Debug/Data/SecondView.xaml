<Window x:Class="White_message.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:White_message"
        mc:Ignorable="d"
        Title="MainWindow" Height="566" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" Grid.Column="0">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>

                    <Label Content="white&#xD;&#xA;message" Grid.Row="1" Grid.Column="1" FontFamily="Comic Sans MS" FontSize="16"/>
                    <Label Content="Chat" Grid.Row="1" Grid.Column="3" VerticalAlignment="Bottom"/>
                    <Label Content="Online" Grid.Row="1" Grid.Column="5" VerticalAlignment="Bottom"/>

                    <TextBox x:Name="Chat" Grid.Row="3" Grid.Column="3" MinHeight="250"/>
                    <ListBox x:Name="OnLine" Grid.Row="3" Grid.Column="5"  MinHeight="250"/>

                    <Label Content="Name:" Grid.Row="5" Grid.Column="1" VerticalAlignment="Bottom"/>
                                    
                    <TextBox x:Name="Name" Grid.Row="6" Grid.Column="1" Text="User1"/>
                    
                    <TextBox x:Name="Message" Grid.Row="7" Grid.Column="3" MinHeight="50" KeyDown="Message_KeyDown"/>
                    
                    <Button x:Name="Connect" Content="Connect" Grid.Row="9" Grid.Column="1" Background="White" Click="Connect_Click"/>
                    <Button x:Name="Send" Content="Send" Grid.Row="9" Grid.Column="3" Background="White" Click="Send_Click"/>
                                 
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="ChangeView" Content=" ChangeView" HorizontalAlignment="Left" Height="93" Margin="30,32,0,0" VerticalAlignment="Top" Width="117" Click="ChangeView_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>